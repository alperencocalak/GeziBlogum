@model Post


<div class="container my-4">
    <div class="row">
        <div class="col-12 col-lg-8">
            <div class="bg-white p-4 rounded shadow-sm mb-4">
                <h1 class="h4 mb-3">@Model.Title</h1>

                <div class="mb-3">
                    @foreach (var tag in Model.Tags)
                    {
                        <a href="/blogs/tag/@tag.Url" class="badge bg-@tag.Color bg-opacity-10 text-@tag.Color me-1 mb-1 fw-bold">@tag.Text</a>
                    }

                </div>
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" class="img-fluid rounded mb-3"/>
                }

                <div>@Model.Content</div>
            </div>

            <div class="bg-white p-4 rounded shadow-sm">
                <h4><span id="commentCount">@Model.Comments.Count() adet yorum var</span></h4>

                <div id="comments">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="my-4 d-flex flex-wrap">
                            <img src="@comment.User.Image" class="avatar rounded-circle me-3 mb-2" style="width: 48px; height: 48px;" alt="Kullanıcı resmi">
                            <div>
                                <h6 class="mb-0">@comment.User.UserName</h6>
                                <small class="text-muted">@comment.PublishedOn.ToString("g")</small>
                                <p class="mb-0">@comment.Text</p>
                            </div>
                        </div>
                    }
                </div>

                @if (User.Identity!.IsAuthenticated)
                {
                    <hr class="my-4" />
                    <h4 class="mb-3">Yorum Ekle</h4>

                    <form action="/posts/AddComment" method="post">
                        <input type="hidden" id="PostId" name="PostId" value="@Model.PostId" />

                        <div class="mb-3">
                            <label for="Text" class="form-label">Yorum</label>
                            <textarea name="Text" id="Text" class="form-control" rows="3"></textarea>
                        </div>

                        <div class="d-grid d-md-block">
                            <button type="submit" id="btnYorumKayit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                }
                else
                {
                    <p class="mt-3">Yorum yapabilmek için <a href="/users/login">giriş yapmalısınız</a>.</p>
                }
            </div>
        </div>

        <div class="col-12 col-lg-4 mt-4 mt-lg-0">
            <vc:tags-menu></vc:tags-menu>
            <vc:new-posts></vc:new-posts>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnYorumKayit").click(function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("AddComment")',
                    dataType: 'json',
                    data: {
                        PostId: $('#PostId').val(),
                        Text: $('#Text').val()
                    },
                    success: function (yorum) {
                        var date = new Date(yorum.publishedOn);

                        $("#comments").append(`
                            <div class="my-4 d-flex flex-wrap">
                                <img src="/img/${yorum.avatar}" class="avatar rounded-circle me-3 mb-2" style="width: 48px; height: 48px;" alt="Kullanıcı resmi">
                                <div>
                                    <h6 class="mb-0">${yorum.username}</h6>
                                    <small class="text-muted">${date.toLocaleDateString()}</small>
                                    <p class="mb-0">${yorum.Text}</p>
                                </div>
                            </div>
                        `);

                        $("#Text").val('');
                        let count = parseInt($("#commentCount").text()) || 0;
                        $("#commentCount").text((count + 1) + " adet yorum var");
                    }
                });

                return false;
            });
        });
    </script>
}
