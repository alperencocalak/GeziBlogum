@model User

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-12 col-md-3 mb-3 mb-md-0">
            <div class="bg-white p-3 rounded shadow-sm text-center">
                <img src="/img/@Model.Image" class="img-fluid rounded-circle mb-2" style="max-width: 150px;" alt="@Model.Name">
                <h5 class="mt-2">@Model.Name</h5>
            </div>
        </div>

        <div class="col-12 col-md-9">
            <div class="bg-white p-4 rounded shadow-sm">
                <h5 class="mb-4">Bloglar</h5>

                @if (Model.Posts != null && Model.Posts.Any())
                {
                    <ul class="list-group">
                        @foreach (var post in Model.Posts)
                        {
                            <li class="list-group-item d-flex align-items-center gap-2">
                                <i class="bi bi-caret-right-fill text-primary"></i>
                                <a href="/blogs/@post.Url" class="text-decoration-none">@post.Title</a>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Henüz gönderi paylaşılmamış.</p>
                }
            </div>
        </div>
    </div>
</div>
