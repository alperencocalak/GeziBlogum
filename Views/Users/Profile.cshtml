@model User

<div class="container my-4">
    <div class="row justify-content-center">

        <div class="col-12 col-md-4 col-lg-3 mb-4 mb-md-0">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <img src="@Model.Image"
                         class="img-fluid rounded-circle mb-3 border"
                         style="width: 120px; height: 120px; object-fit: cover;"
                         alt="@Model.Name" />

                    <h5 class="card-title">@Model.Name</h5>
                    <p class="text-muted mb-0">@Model.UserName</p>
                    <p class="small text-secondary">@Model.Email</p>

                    @if (User.Identity?.Name == Model.UserName)
                    {
                        <a href="/users/editprofile" class="btn btn-outline-primary btn-sm mt-2">‚úèÔ∏è Profili D√ºzenle</a>
                    }
                </div>
            </div>
        </div>

        <div class="col-12 col-md-8 col-lg-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title mb-4">üìö Yayƒ±nlanan Bloglar</h5>

                    @if (Model.Posts != null && Model.Posts.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var post in Model.Posts)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="/blogs/@post.Url" class="fw-semibold text-decoration-none text-dark">
                                        @post.Title
                                    </a>
                                    <span class="badge bg-light text-muted">
                                        @post.PublishedOn.ToString("dd MMM yyyy")
                                    </span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">Hen√ºz g√∂nderi payla≈üƒ±lmamƒ±≈ü.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
